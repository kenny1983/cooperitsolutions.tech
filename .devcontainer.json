{
	"name": "My Portfolio Website",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".",
		"options": [
			"-t",
			"portfolio-website"
		],
		"features": {
			"ghcr.io/devcontainers/features/ssh-agent:1": {}
		}
	},
	"forwardPorts": [ 8080 ],
	"mounts": [
		"source=${localWorkspaceFolder}/public,target=/var/www/html,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/.container-history,target=/root/.bash_eternal_history,type=bind,consistency=cached"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"xdebug.php-debug"
			]
		}
	},
	"postStartCommand": "service apache2 start"
}