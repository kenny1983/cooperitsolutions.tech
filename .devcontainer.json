{
	"name": "My Portfolio Website",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".",
		"options": [
			"-t",
			"portfolio-website"
		],
		"features": {
			"ghcr.io/devcontainers/features/ssh-agent:1": {}
		}
	},
	"forwardPorts": [ 8080 ],
	"mounts": [
		"source=${localWorkspaceFolder}/public,target=/var/www/html,type=bind,consistency=cached"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"openai.codex",
				"xdebug.php-debug"
			],
			"settings": {
				"remote.extensionKind": {
					"openai.codex": "ui"
				}
			}
		}
	},
	"postStartCommand": "service apache2 start"
}